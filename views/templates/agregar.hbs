<div class="row m-0 justify-content-center align-items-center vh-100 agenda">    
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                INGRESAR DATOS DE LA PERSONA
            </div>
            <div class="card-body">
                <form action="/alumnos/agregar" method="POST">
                    <div class="form-group">
                        <label for="id">ID:</label>
                        <input type="text" name="id" id="id" value="" class="form-control" placeholder="id">
                    </div>
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" name="nombre" id="nombre" value="" class="form-control" placeholder="Nombre">
                    </div>
                    <div class="form-group">
                        <label for="apellido">Apellido:</label>
                        <input type="text" name="apellido" id="apellido" value="" placeholder="Apellido" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="grado">Grado:</label>
                        <input type="text" name="grado" id="grado" value="" class="form-control" placeholder="Grado">
                    </div>
                    <div class="form-group">
                        <label for="seccion">Seccion:</label>
                        <input type="text" name="seccion" id="seccion" value="" class="form-control" placeholder="Seccion">
                    </div>
                    <div class="form-group">
                        <label for="turno">Turno:</label>
                        <input type="text" name="turno" id="turno" value="" class="form-control" placeholder="Turno">
                    </div>
