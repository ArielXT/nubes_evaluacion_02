<div class="row m-0 justify-content-center align-items-center vh-100 agenda">
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                Agregar IMAGEN
            </div>
            <div class="card-body">
                {{#each alumno}}
                <form action="/alumnos/uploadImage{{this.id}}" method="post" enctype="multipart/form-data">
                    <div class="row d-flex">
                        <div class="col-9">
                            <input type="file" class="form-control" required name="imagen" id="imagen">
                        </div>
                        <div class="col-3">
                            <input type="submit" class="btn btn-primary" value="Enviar">
                        </div>
                    </div>
                </form>                
                {{/each}}
            </div>
        </div>
    </div>
</div>